#include <iostream>
#include <queue>
#include <vector>
using namespace std;

int countStudents(vector<int>& students, vector<int>& sandwiches) {
    queue<int> q;
    for (int s : students) q.push(s);

    int i = 0;  // index for sandwiches
    int count = 0;  // to check deadlock

    while (!q.empty() && count < q.size()) {
        if (q.front() == sandwiches[i]) {
            // student eats
            q.pop();
            i++;
            count = 0;  // reset deadlock counter
        } else {
            // move student to back
            q.push(q.front());
            q.pop();
            count++;
        }
    }

    return q.size();  // remaining students
}

int main() {
    vector<int> students = {1,1,0,0};
    vector<int> sandwiches = {0,1,0,1};

    cout << countStudents(students, sandwiches) << endl;  // Output: 0
    return 0;
}
